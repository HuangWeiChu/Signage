<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.signage">

    <!-- 存取相機權限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- 存取網路權限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 裝置不進入睡眠權限 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 允許應用程序寫入外部存儲 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允許應用程序修改全局音頻設置 -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- 允許應用程序錄製音頻 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 允許應用程序訪問有關網絡的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.FullScreen">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".SecondView" />
        <activity android:name=".ThirdView" />
        <activity android:name=".FinalView" />
        <activity android:name=".Recognize" />
        <activity android:name=".Passtxt" />
        <activity android:name=".SendImage" />
    </application>

</manifest>